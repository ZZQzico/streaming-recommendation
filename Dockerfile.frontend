FROM node:16-alpine

WORKDIR /app

# 复制package.json和package-lock.json
COPY ./frontend/package*.json ./

# 安装依赖
RUN npm ci

# 复制所有源代码
COPY ./frontend/ ./

# 构建React应用
RUN npm run build

# 安装serve用于提供静态文件
RUN npm install -g serve

# 暴露5173端口
EXPOSE 5173

# 启动服务
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"] 